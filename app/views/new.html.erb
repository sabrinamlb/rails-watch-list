<div class="container">
  <h1>Create a New List</h1>

  <%= simple_form_for @list do |f| %>
    <%= f.input :name, label: "List Name" %>
    <%= f.input :poster_url, label: "" %>
    <%= f.button :submit, "Create List", class: "btn btn-success" %>
  <% end %>

  <%= link_to 'Back to Lists', lists_path, class: 'btn btn-secondary mt-3' %>
</div>
